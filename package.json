{
  "scripts": {
    "dev-hugo": "hugo server --gc",
    "dev-tailwind": "npx @tailwindcss/cli -i assets/css/main.css -o public/css/index.css --watch",
    "dev": "run-p dev-hugo dev-tailwind",
    "build": "npx @tailwindcss/cli -i assets/css/main.css -o public/css/index.css --minify && hugo --minify"
  },
  "dependencies": {
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.5",
    "tailwindcss": "^4.0.3"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.16",
    "daisyui": "^5.0.0-beta.6"
  }
}
