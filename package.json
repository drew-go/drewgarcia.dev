{
  "type": "module",
  "scripts": {
    "dev:hugo": "hugo server --gc",
    "dev:css": "npx @tailwindcss/cli -i assets/css/main.css -o assets/css/index.css --minify",
    "dev": "run-p dev:css dev:hugo",
    "build:css": "npx @tailwindcss/cli -i assets/css/main.css -o assets/css/index.css --minify",
    "build": "npm run build:css && hugo --minify"
  },
  "dependencies": {
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.5",
    "tailwindcss": "^4.0.3"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.0.3",
    "@tailwindcss/typography": "^0.5.16",
    "autoprefixer": "^10.4.20",
    "daisyui": "^5.0.0-beta.6",
    "postcss": "^8.5.1",
    "postcss-cli": "^11.0.0"
  }
}
